---
import Navbar from "@/components/navbar.astro";
import { Toaster } from "sonner";
import { Head } from "astro-capo";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <Head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Primary Meta Tags -->
    <meta name="title" content={title} />
    <meta name="description" content="Con suprabox asegurate de tener los mejores suplementos y ropa deportiva para tu dia a dia." />
    <meta property="image" content="/assets/shop.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://suprabox.vercel.app" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Con suprabox asegurate de tener los mejores suplementos y ropa deportiva para tu dia a dia." />
    <meta property="og:image" content="/assets/shop.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://suprabox.vercel.app" />
    <meta property="twitter:title" content={title} />
    <meta
      property="twitter:description"
      content="Con suprabox asegurate de tener los mejores suplementos y ropa deportiva para tu dia a dia."
    />
    <meta property="twitter:image" content="/assets/shop.png" />

    <!-- SiteMaps -->
    <link rel="sitemap" href="/sitemap-index.xml" />
  </Head>
  <body class="bg-black bg-gradient-to-t from-neutral-950 to-blue-800/30 min-h-dvh text-white">
    <Toaster client:only="react" />
    <Navbar />
    <main>
      <slot />
    </main>

    <footer class="border-t border-neutral-500/30 bg-neutral-950/20 backdrop-blur-lg h-full">
      <div class="w-full container mx-auto p-4 md:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
          <a href="/" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse order-2">
            <img src="/assets/logo.webp" class="invert h-12" alt="SupraBox GNS" />
          </a>

          <ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400 order-3">
            <li>
              <a href="#" class="px-4 py-2 hover:bg-white/5 rounded me-4 md:me-6">Productos</a>
            </li>
            <li>
              <a href="#" class="px-4 py-2 hover:bg-white/5 rounded me-4 md:me-6">Categorias</a>
            </li>
            <li>
              <a href="#" class="px-4 py-2 hover:bg-white/5 rounded">Contacto</a>
            </li>
          </ul>

          <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400 order-1"
            >© 2023 <a href="https://flowbite.com/" class="hover:underline">Suprabox GNS™</a>. All Rights Reserved.</span
          >
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "tailwindcss";
</style>
